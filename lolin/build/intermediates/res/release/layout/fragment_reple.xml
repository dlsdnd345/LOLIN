<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_gray_2A2A2A"
        android:orientation="vertical" >

        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/list_reple"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@null"
            android:layout_weight="10" />

        <TextView
            android:id="@+id/text_no_reple_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/reple_fragment_text_no_reple_message"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/text_white"
            />

        <LinearLayout
            android:id="@+id/bottom_reple_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_reple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="@string/reple_fragment_text_reple_hint"
                android:maxLines="4" />

            <TextView
                android:id="@+id/text_add_reple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="전송"
                android:textColor="@color/text_black" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</RelativeLayout><!-- From: file:/Users/woong/LOLIN/lolin/res/layout/fragment_reple.xml -->